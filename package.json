{
  "type": "module",
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^16.6.0",
    "@types/puppeteer": "^5.4.4",
    "@types/wicg-file-system-access": "*",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-puppeteer": "^6.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "2.4.1",
    "puppeteer": "19.8.0"
  },
  "scripts": {
    "build": "make build",
    "start": "cd dist && ../custom_server.py ${PORT:-8000}",
    "lint": "eslint . --ext .ts",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx prettier . --check",
    "record": "make record",
    "prepare": "husky install",
    "test": "export platform=${PLATFORM:-browser}; [ \"$platform\" = \"browser\" ] && make cache_base; cd tests/robot && robot --variable cache:$(realpath ../../work/browser_cache/) --variable platform:$platform -i $platform ."
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer"
  }
}
