{
  "type": "module",
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^16.6.0",
    "@types/puppeteer": "^5.4.4",
    "@types/wicg-file-system-access": "*",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "2.4.1",
    "puppeteer": "^21.1.1",
    "typescript": "4.4.4"
  },
  "scripts": {
    "build": "make build",
    "start": "cd dist && ../custom_server.py ${PORT:-8000}",
    "lint": "eslint . --ext .ts",
    "prettier": "npx prettier --write .",
    "prettier-check": "npx prettier . --check",
    "record": "make record",
    "prepare": "husky install",
    "test:robot": "export platform=${PLATFORM:-browser}; [ \"$platform\" = \"browser\" ] && make cache_base || [ \"$platform\" = \"browser_virtual\" ] && make cache_vfs; cd tests/robot && robot --variable cache:$(realpath ../../work/browser_cache/) --variable platform:$platform -i $platform .",
    "test:unit": "jest --config=tests/unit/jest.config.ts",
    "test:stability": "jest --config=tests/stability/jest.config.js"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
